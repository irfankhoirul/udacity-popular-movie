<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_trailer_thumbnail"
        android:layout_width="@dimen/item_trailer_width_default"
        android:layout_height="@dimen/item_trailer_height_default"
        android:background="@color/pure_black"
        android:contentDescription="@string/image_content_description_trailer_thumbnail"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_movie_paceholder" />

    <ImageView
        android:id="@+id/iv_trailer_play_button"
        android:layout_width="@dimen/standard_32"
        android:layout_height="@dimen/standard_32"
        android:layout_gravity="center"
        android:alpha="0.8"
        android:contentDescription="@string/image_content_description_play_button"
        android:src="@drawable/ic_play_circle_filled_black_24dp" />
</FrameLayout>