<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_trailer_thumbnail"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@color/pure_black"
        android:contentDescription="@string/image_content_description_trailer_thumbnail"
        android:scaleType="centerCrop"
        android:src="@drawable/image_placeholder" />

    <ImageView
        android:id="@+id/iv_trailer_play_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:alpha="0.8"
        android:contentDescription="@string/image_content_description_play_button"
        android:src="@drawable/ic_play_circle_filled_black_24dp" />
</FrameLayout>